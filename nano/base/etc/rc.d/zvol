#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/zvol,v 1.1.2.3.2.2 2012/11/17 08:24:38 svnexp Exp $
#

# PROVIDE: zvol
# REQUIRE: hostid
# KEYWORD: nojail

. /etc/rc.subr

name="zvol"
rcvar="zfs_enable"
start_cmd="zvol_start"
stop_cmd="zvol_stop"
required_modules="zfs"

zvol_start()
{
	# Enable swap on ZVOLs with property org.freebsd:swap=on.
	zfs list -H -o org.freebsd:swap,name -t volume | \
	while read state name; do
		case "${state}" in
		[oO][nN])
			swapon /dev/zvol/${name}
			;;
		esac
	done
}

zvol_stop()
{
	# Disable swap on ZVOLs with property org.freebsd:swap=on.
	zfs list -H -o org.freebsd:swap,name -t volume | \
	while read state name; do
		case "${state}" in
		[oO][nN])
			swapoff /dev/zvol/${name}
			;;
		esac
	done
}

load_rc_config $name
run_rc_command "$1"
