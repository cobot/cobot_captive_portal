#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/ugidfw,v 1.7.2.1.8.2 2012/11/17 08:24:38 svnexp Exp $

# PROVIDE: ugidfw
# BEFORE: LOGIN
# KEYWORD: nojail shutdown

. /etc/rc.subr

name="ugidfw"
rcvar="ugidfw_enable"
start_cmd="ugidfw_start"
stop_cmd="ugidfw_stop"
required_modules="mac_bsdextended"

ugidfw_load()
{
	if [ -r "${bsdextended_script}" ]; then
		. "${bsdextended_script}"
	fi
}

ugidfw_start()
{
	[ -z "${bsdextended_script}" ] && bsdextended_script=/etc/rc.bsdextended

	if [ -r "${bsdextended_script}" ]; then
		ugidfw_load
		echo "MAC bsdextended rules loaded."
	fi
}

ugidfw_stop()
{
	# Disable the policy
	#
	kldunload mac_bsdextended
}

load_rc_config $name
run_rc_command "$1"
