#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/ccd,v 1.6.2.1.8.2 2012/11/17 08:24:38 svnexp Exp $
#

# PROVIDE: disks
# KEYWORD: nojail

. /etc/rc.subr

name="ccd"
start_cmd="ccd_start"
stop_cmd=":"

ccd_start()
{
	if [ -f /etc/ccd.conf ]; then
		echo "Configuring CCD devices."
		ccdconfig -C
	fi
}

load_rc_config $name
run_rc_command "$1"
